{% extends 'DIISHAdminBundle::layout.html.twig' %}

{% block page_title 'User Registration - Admin' %}
{% block product_name 'Admin' %}
{% block content_title 'User Registration' %}

{% set menu = 'admin' %}
{% set sidebar_menu = 'admin_user_register' %}

{% block content %}
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
  {{ form_errors(form) }}
    <div class="control-group {% if form.displayname.vars.errors|length > 0 %}error{% endif %}">
      <label class="control-label">Name</label>
      <div class="controls">
        {{ form_errors(form.displayname) }}
        {{ form_widget(form.displayname) }}
      </div>
    </div>
    <div class="control-group {% if form.username.vars.errors|length > 0 %}error{% endif %}">
      <label class="control-label">Username</label>
      <div class="controls">
        {{ form_errors(form.username) }}
        {{ form_widget(form.username) }}
      </div>
    </div>
    <div class="control-group {% if form.email.vars.errors|length > 0 %}error{% endif %}">
      <label class="control-label">Email</label>
      <div class="controls">
        {{ form_errors(form.email) }}
        {{ form_widget(form.email.first) }}
      </div>
    </div>
        <div class="control-group {% if form.email.vars.errors|length > 0 %}error{% endif %}">
      <label class="control-label">Re-type Email</label>
      <div class="controls">
        {{ form_widget(form.email.second) }}
      </div>
    </div>
    <div class="control-group {% if form.rawPassword.vars.errors|length > 0 %}error{% endif %}">
      <label class="control-label">Password</label>
      <div class="controls">
        {{ form_errors(form.rawPassword) }}
        {{ form_widget(form.rawPassword) }}
      </div>
    </div>
    <hr>
    <div class="control-group">
      <label class="control-label">Acount control</label>
      <div class="controls">
        <label class="checkbox">{{ form_widget(form.isActive) }}Active</label>
      </div>
      <div class="controls">
        <label class="checkbox">{{ form_widget(form.isLock) }}Lock</label>
      </div>
    </div>
    {{ form_rest(form) }}
    <div class="form-actions">
      <button class="btn btn-primary">Go to group selection</button>
    </div>
{{ form_end(form) }}
{% endblock %}
