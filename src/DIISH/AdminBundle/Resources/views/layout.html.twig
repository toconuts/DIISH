{% extends '::base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  {% stylesheets '@DIISHCommonBundle/Resources/public/css/main.css'
                 '@DIISHAdminBundle/Resources/public/css/content.css' %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
  {% endstylesheets %}
{% endblock %}

{% block body %}
<div class="wrapper-with-sidebar">
  <div class="container-fluid">
    <div clas="row-fluid">
      {% block sidebar %}
      <div class="span2">
        <div class="well sidebar-nav">
          {% if sidebar_menu is not defined %}
            {% set sidebar_menu = null %}
          {% endif %}
          <ul class="nav nav-list">
            <li class="nav-header">User</li>
            <li {% if sidebar_menu == 'admin_user' %}class="active"{% endif %}>
              <a href="{{ path('admin_user') }}">List</a></li>
            <li {% if sidebar_menu == 'admin_user_register' %}class="active"{% endif %}>
              <a href="{{ path('admin_user_register') }}">Add</a></li>
            <li class="nav-header">Group</li>
            <li {% if sidebar_menu == 'admin_group' %}class="active"{% endif %}>
              <a href="{{ path('admin_group') }}">List</a></li>
            <li {% if sidebar_menu == 'admin_group_register' %}class="active"{% endif %}>
              <a href="{{ path('admin_group_register') }}">Add</a></li>
          </ul>
        </div>
      </div>
      {% endblock %}

      <div class="span10">
        <div class="hero-unit">
          <h1>{% block content_title %}{{ block('content_title') }}{% endblock %} - Admin </h1>
        </div>
        <hr>
        
        {% for flashMessage in app.session.flashbag.get('success') %}
          <div class="alert alert-success">
            {{ flashMessage }}
          </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('error') %}
          <div class="alert alert-error">
            {{ flashMessage }}
          </div>
        {% endfor %}
        
        {% block content %}{% endblock %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
