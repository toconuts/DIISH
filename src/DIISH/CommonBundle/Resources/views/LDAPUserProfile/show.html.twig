{% extends 'DIISHCommonBundle::layout.html.twig' %}

{% block page_title 'User&apos;s details - Profile' %}
{% block product_name 'Common' %}
{% block content_title 'User&apos;s detals' %}

{% set menu = 'common_profile' %}
{% set sidebar_menu = 'common_profile' %}

{% block content %}
<table class="table table-striped table-bordered">
  <tbody>
    <tr>
      <th>Username</th>
      <td>{{ user.username }}</td>
    </tr>
    <tr>
      <th>Display name</th>
      <td>{{ displayname }}</td>
    </tr>
    <tr>
      <th>Email</th>
      <td>{{ userPrincipalName }}</td>
    </tr>
    <tr>
      <tH>DN</th>
      <td>{% if user.dn is defined %}{{ user.dn }}{% endif %}</td>
    </tr>
    <tr>
      <th>Groups</th>
      <td>
      {% for role in user.roles %}
        {{ role }}<br>
      {% endfor %}
    </td>
    </tr>
  </tbody>
</table>
{% endblock %}
