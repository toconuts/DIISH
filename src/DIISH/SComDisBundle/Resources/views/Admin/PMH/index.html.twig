{% extends 'DIISHSComDisBundle::layout.html.twig' %}

{% block page_title 'Syndromic Surveillance - PMH - SComDis' %}
{% block product_name 'SComDis' %}
{% block content_title 'Syndromic Surveillance - PMH' %}

{% set menu = 'SComDis' %}
{% set sidebar_menu = 'scomdis_admin_pmh' %}

{% block content %}
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Clinic</th>
    </tr>
  </thead>
  <tbody>
    {% for pmh in pagination %}
    <tr>
      <td><a href="{{ path('scomdis_admin_pmh_show', {'id': pmh.id}) }}">{{ pmh.id }}</a></td>
      <td>{{ pmh.clinic.name }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{{ knp_pagination_render(pagination) }}

<div class="row">
  <div class="span8">
    <p></p>
  </div>
  <div class="span2">
    <div class="well">
      <form action="{{ path('scomdis_admin_pmh_register') }}">
        <h4>Add new PMH Dept.</h4>
        <input type="submit" class="btn btn-primary" value="Register">
      </form>
    </div>
  </div>
</div>
{% endblock %}
