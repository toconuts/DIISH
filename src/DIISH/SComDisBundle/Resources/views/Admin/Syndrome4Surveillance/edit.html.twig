{% extends 'DIISHSComDisBundle::layout.html.twig' %}

{% block page_title 'Syndromic Surveillance - Syndrome - SComDis' %}
{% block product_name 'SComDis' %}
{% block content_title 'Syndromic Surveillance - Syndrome - Edit' %}

{% set menu = 'SComDis' %}
{% set sidebar_menu = 'scomdis_admin_syndrome4surveillance' %}

{% block content %}
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
  {{ form_errors(form) }}
    <div class="control-group {% if form.name.vars.errors|length > 0 %}error{% endif %}">
      <label class="control-label">Name</label>
      <div class="controls">
        {{ form_errors(form.name) }}
        {{ form_widget(form.name) }}
      </div>
    </div>
    <div class="control-group {% if form.displayId.vars.errors|length > 0 %}error{% endif %}">
      <label class="control-label">Display ID</label>
      <div class="controls">
        {{ form_errors(form.displayId) }}
        {{ form_widget(form.displayId) }}
      </div>
    </div>
    <div class="form-actions">
      <a href=javascript:history:back() class="btn">&laquo; Cancel</a>
      <input type="submit" class="btn btn-primary" value="Confirm">
    </div>
{{ form_end(form) }}
{% endblock %}
